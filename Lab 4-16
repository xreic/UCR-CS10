#include <iostream>

using namespace std;

int main(){
    char A = 'a';
    int R = 0;
    
    cout << "Enter a character: ";
    cin >> A;
    cout << "Enter number of rows: ";
    cin >> R;
    cout << endl;
    
    for (int i = 1; i <= R; ++i){
        cout << A << " ";
        for (int j = 1; j < i; ++j){
            cout << A << " ";
            }
        cout << endl;
    }
    
    return 0;
}
