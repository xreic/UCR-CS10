#include <iostream>
#include <string>      // Needed for string type
#include <cmath>

using namespace std;

int main() {
   double x1 = 0.0;
   double y1 = 0.0;
   double x2 = 0.0;
   double y2 = 0.0;
   double lineDist = 0.0;
   
   cout << "Please enter the x-value of the first set of coordinates: ";
   cin  >> x1;
   cout << endl;
   
   cout << "Please enter the y-value of the first set of coordinates: ";
   cin  >> y1;
   cout << endl;
   
   cout << "The coordinates for the first point is (" << x1 << "," << y1 << ")" << endl;
   cout << endl;
   
   cout << "Please enter the x-value of the second set of coordinates: ";
   cin  >> x2;
   cout << endl;
   
   cout << "Please enter the x-value of the second set of coordinates: ";
   cin  >> y2;
   cout << endl;
   
   cout << "The coordinates for the second point is (" << x2 << "," << y2 << ")" << endl;
   cout << endl;
   
   lineDist = sqrt(pow(x2 - x1,2) + pow(y2 - y1,2));
   
   cout << "The distance between the points (" << x1 << "," << y1 << ") and (" << x2 << "," << y2 << ") is " << lineDist << endl;
   
   return 0;
}
